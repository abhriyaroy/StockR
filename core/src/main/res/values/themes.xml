<resources>
    <!-- Base application theme. -->
    <style name="Theme.StockR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_main</item>
        <item name="colorOnPrimary">@color/primary_main</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="AndroidHeading1Roboto36Pt">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AndroidSplashRoboto24Pt">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">-12sp</item>
    </style>

    <style name="AndroidHeading2Roboto24Pt">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">-12sp</item>
    </style>

    <style name="AndroidHeading3Roboto18Pt">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AndroidParagraph1Roboto17Pt">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="AndroidHeading4Roboto16Pt">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
