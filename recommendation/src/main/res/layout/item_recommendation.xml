<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemNameTextView"
                style="@style/AndroidParagraph1Roboto17Pt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{stockRecommendationModelItem.shortName}"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="CHOLAFIN" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemBuyAtTextView"
                style="@style/AndroidParagraph3Roboto12Pt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{context.getString(R.string.buy_at_x ,stockRecommendationModelItem.entryPriceInRupees)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemNameTextView"
                tools:text="Buy at: 943"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemSellAtTextView"
                style="@style/AndroidParagraph3Roboto12Pt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{context.getString(R.string.sell_at_x ,stockRecommendationModelItem.targetPriceInRupees)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemBuyAtTextView"
                tools:text="Sell at: 990"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <data>

        <import type="studio.zebro.recommendation.R" />

        <variable
            name="stockRecommendationModelItem"
            type="studio.zebro.recommendation.domain.model.StockRecommendationModel" />
    </data>
</layout>